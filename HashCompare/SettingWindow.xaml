<Window x:Class="HashCompare.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashCompare"
        mc:Ignorable="d"
        Title="SettingWindow" Height="200" Width="500">
    <Grid>
        <TextBox x:Name="txtHostname" Padding="3" FontSize="15" HorizontalAlignment="Center" Height="30" Margin="0,39,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="408"/>
        <Button x:Name="btnChange" Content="Change" HorizontalAlignment="Center" Margin="-200,120,0,0" VerticalAlignment="Top" Width="75" Height="25" FontWeight="Bold" Click="OnChange"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Center" Margin="200,120,0,0" VerticalAlignment="Top" Width="75" Height="25" FontWeight="Bold" Click="OnCancel"/>

    </Grid>
</Window>
