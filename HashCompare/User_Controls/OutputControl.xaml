<UserControl x:Class="HashCompare.User_Controls.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HashCompare.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="380">
    <Grid>
        <TextBox BorderThickness="0" x:Name="txtInputAmount" IsReadOnly="True" HorizontalAlignment="Left" Height="20"  Text="000000000000000000000000000" VerticalAlignment="Top" Margin="85,0,0,0" />
        <TextBox BorderThickness="0" x:Name="txtInputAddress" IsReadOnly="True" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="MMMMMMMMMMMMMMMMMMMMMMMMMMM" VerticalAlignment="Top" Margin="85,20,0,0"/>
        <TextBlock  Background="White" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Amount:" VerticalAlignment="Top" Height="20" Width="85"/>
        <TextBlock  Background="White" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Address:" VerticalAlignment="Top" Height="23" Width="85" Margin="0,20,0,0"/>
    </Grid>
</UserControl>
