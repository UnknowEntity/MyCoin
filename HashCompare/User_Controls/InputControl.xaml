             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HashCompare.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="260">
    <Grid>
        <TextBox x:Name="txtInputAddress" BorderThickness="0" IsReadOnly="True" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="000000000000000000000000000" VerticalAlignment="Top" Margin="76,0,0,0" />
        <TextBlock Background="White"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="Address:" VerticalAlignment="Top" Width="76" Height="23"/>
    </Grid>
</UserControl>
